<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <TextView
            android:id="@+id/actionTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:gravity="start"
            android:textAppearance="@style/TextAppearanceSecondary"
            android:textSize="20sp"
            android:lines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="22:30"/>

    <TextView
            android:id="@+id/primaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="24dp"
            android:gravity="start"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearancePrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/actionTime"
            tools:text="Go to the Restaurant"/>

    <TextView
            android:id="@+id/secondaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="24dp"
            android:gravity="start"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearanceSecondary"
            app:layout_constraintTop_toBottomOf="@+id/primaryText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="60 minutes"/>

</androidx.constraintlayout.widget.ConstraintLayout>