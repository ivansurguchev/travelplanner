<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <TextView
            android:id="@+id/tripName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:gravity="start"
            android:textSize="18sp"
            android:textColor="@color/text_primary_dark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iconForward"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="California"/>

    <TextView
            android:id="@+id/tripPrimaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:ellipsize="end"
            android:gravity="start"
            android:textSize="14sp"
            android:textColor="@color/text_primary_dark"
            android:lines="1"
            app:layout_constraintLeft_toLeftOf="@+id/tripName"
            app:layout_constraintRight_toLeftOf="@+id/iconForward"
            app:layout_constraintTop_toBottomOf="@+id/tripName"
            tools:text="18 - 30 мая"/>

    <TextView
            android:id="@+id/tripSecondaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/text_secondary_dark"
            android:gravity="start"
            android:lines="1"
            app:layout_constraintLeft_toLeftOf="@+id/tripName"
            app:layout_constraintRight_toLeftOf="@+id/iconForward"
            app:layout_constraintTop_toBottomOf="@+id/tripPrimaryText"
            tools:text="12 событий, 89 фото"/>

    <ImageView
            android:id="@+id/iconForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:src="@drawable/arrow_right_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>