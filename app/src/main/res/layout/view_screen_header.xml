<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:id="@+id/leftButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="@drawable/ripple_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/arrow_left_dark" />

    <TextView
            android:id="@+id/primaryTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearancePrimary"
            android:textColor="@color/text_primary_dark"
            app:layout_constraintBottom_toTopOf="@+id/secondaryTitleView"
            app:layout_constraintLeft_toRightOf="@+id/leftButton"
            app:layout_constraintRight_toLeftOf="@+id/rightButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Primary Title" />

    <TextView
            android:id="@+id/secondaryTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearanceSecondary"
            android:textColor="@color/text_secondary_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/leftButton"
            app:layout_constraintRight_toLeftOf="@+id/rightButton"
            app:layout_constraintTop_toBottomOf="@+id/primaryTitleView"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Secondary Title" />

    <ImageView
            android:id="@+id/rightButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="@drawable/ripple_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</merge>