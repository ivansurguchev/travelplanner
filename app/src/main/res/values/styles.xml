<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TextAppearanceBase" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/action_button</item>
        <item name="android:foreground">@drawable/ripple_20</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textAppearance">@style/TextAppearancePrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="TextAppearancePrimary" parent="TextAppearanceBase">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearanceSecondary" parent="TextAppearanceBase">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="EditField">
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:background">@drawable/edit_field</item>
        <item name="android:textAppearance">@style/TextAppearancePrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
